{
  "name": "hifigan",
  "n_gpu": 1,
  "arch": {
    "type": "Generator",
    "args": {
      "hid": 128,
      "k_u": [16, 16, 4, 4],
      "k_r": [3, 7, 11],
      "d_r": [[[1, 1], [3, 1], [5, 1]], [[1, 1], [3, 1], [5, 1]], [[1, 1], [3, 1], [5, 1]]]
    }
  },
  "mpd": {
    "type": "MPD",
    "args": {
      "mpd_periods": [2, 3, 5, 7, 11]
    }
  },
  "msd": {
    "type": "MSD",
    "args": {
      "num_layers": 3
    }
  },
  "data": {
    "train": {
      "batch_size": 8,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LJSpeechDataset",
          "args": {
            "root": "/home/jupyter/mnt/datasets/LJSpeech-1.1",
            "size": 16384
          }
        }
      ],
      "collator": {
        "type": "LJSpeechCollator",
        "args": {}
      }
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 2e-4,
      "betas": [0.8, 0.99]
    }
  },
  "lr_scheduler": {
    "type": "ExponentialLR",
    "args": {
      "gamma": 0.999
    }
  },
  "trainer": {
    "epochs": 100,
    "save_dir": "saved/",
    "save_period": 25,
    "verbosity": 2,
    "monitor": "min gen_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "nv_project",
    "len_epoch": 1000,
    "grad_norm_clip": 10,
    "log_step": 50
  }
}
